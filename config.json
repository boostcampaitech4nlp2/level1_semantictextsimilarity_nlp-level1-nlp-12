{
    "name": "RoBERTa_baseline",
    "n_gpu": 1,
    "arch": {
        "type": "Model",
        "args": {
            "checkpoint": "klue/roberta-small",
            "criterion": "l1_loss"
        }
    },
    "data_loader": {
        "type": "Dataloader",
        "args":{
            "train_path": "data/train.csv",
            "dev_path": "data/dev.csv",
            "test_path": "data/dev.csv",
            "predict_path": "data/test.csv",
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.03,
            "weight_decay": 0.01,
            "amsgrad": false
        }
    },
    "loss": "l1_loss",
    "metric":  "pearson_corrcoef",
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "gpus":1,
        "max_epochs":10,
        "log_every_n_steps":10,
        "enable_checkpointing":true,
        "weights_save_path": "saved/"
    }
}
