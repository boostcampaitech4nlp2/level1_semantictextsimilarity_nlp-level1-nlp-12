{
    "name": "dev_Roberta_baseline",
    "checkpoint": "klue/roberta-small",
    "n_gpu": 1,
    "model": {
        "type": "Roberta",
        "args": {
            "architecture": "AutoModelForSequenceClassification",
            "num_labels": 1
        }
    },
    "tokenizer": {
        "type": "PretrainedTokenizer",
        "args": {
            "use_fast": true,
            "max_length": 160
        }
    },
    "data_loader": {
        "type": "STS_Dataloader",
        "args":{
            "train_path": "data/train.csv",
            "val_path": "data/dev.csv",
            "test_path": "data/dev.csv",
            "predict_path": "data/test.csv",
            "batch_size": 16,
            "num_workers": 8,
            "shuffle": true
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.03,
            "weight_decay": 0.01,
            "amsgrad": false
        }
    },
    "loss": "l1_loss", 
    "metrics":  [
        "pearson_corrcoef"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "PL_Trainer",
        "args": {
            "accelerator":"gpu",
            "devices":1,
            "max_epochs":3,
            "log_every_n_steps":10,
            "enable_checkpointing":true,
            "default_root_dir": "saved/"
        }
    },
    "wandb": {
        "name": "wjlee",
        "project":"sts",
        "save_dir":"saved/"
    }
}
