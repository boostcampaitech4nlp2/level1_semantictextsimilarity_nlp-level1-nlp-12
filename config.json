{
    "name": "STS",
    "n_gpu": 1,
    "arch": {
        "type": "Model",
        "args": {
            "model_name": "klue/roberta-small",
            "lr": 1e-5
        }
    },
    "loss": "L1_loss",
    "data_loader": {
        "type": "DataLoader",
        "args": {
            "model_name": "klue/roberta-small",
            "batch_size": 16,
            "shuffle": true,
            "train_path": "/opt/ml/data/train.csv",
            "dev_path": "/opt/ml/data/dev.csv",
            "test_path": "/opt/ml/data/dev.csv",
            "predict_path": "/opt/ml/data/test.csv"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}