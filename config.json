{
    "wandb_project": "boostcamp_practice",
    "name": "shchoi",
    "info": "start",
    "n_gpu": 1,
    "arch": {
        "type": "Model",
        "args": {
            "model_name": "klue/roberta-small",
            "lr": 1e-5
        }
    },
    "metric": "pearson_corrcoef",
    "loss": "L1_loss",
    "data_loader": {
        "type": "DataLoader",
        "args": {
            "model_name": "klue/roberta-small",
            "batch_size": 16,
            "shuffle": true,
            "train_path": "/opt/ml/data/train.csv",
            "dev_path": "/opt/ml/data/dev.csv",
            "test_path": "/opt/ml/data/dev.csv",
            "predict_path": "/opt/ml/data/test.csv"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "args": {
            "max_epochs": 100,
            "gpus": 1,
            "log_every_n_steps": 1
        }
    }
}