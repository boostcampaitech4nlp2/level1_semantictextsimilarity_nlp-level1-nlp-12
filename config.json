{
    "name": "STS_baseline",
    "accelerator": "cuda",
    "checkpoint": "klue/roberta-base",
    "model": "Roberta",
    "model_args":{
        "architecture": "AutoModelForSequenceClassification",
        "num_labels": 1
    },
    "batch_size": 32,
    "criterion": "l1_loss",
    "optimizer": "AdamW",
    "lr": 1e-3,
    "lr_scheduler": "StepLR",
    "lr_scheduler_args": {
	    "step_size": 100
    },
    "max_epochs": 10,
    "max_length": 160,
    "log_every_n_steps": 30,
    "metrics": [
        "pearson"
    ],
    "data_loader": "STSDataLoader",
    "data_loader_args": {
        "data_dir": "data/",
        "shuffle": true,
        "num_workers": 8,
        "validation_split": 0.1,
        "collate_fn": "default_collate",
        "train_path": "data/train.csv",
        "val_path": "",
        "test_path": "data/dev.csv",
        "predict_path": "data/test.csv"
    },
    "wandb": {
        "owner": "wjl",
        "project": "nlp12/sts"
    }
}
