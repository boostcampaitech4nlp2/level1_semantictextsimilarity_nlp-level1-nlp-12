{
    "name": "STS",
    "accelerator": "cuda",
    "checkpoint": "sentence-transformers/distiluse-base-multilingual-cased-v1",
    "model": "SentTransformer",
    "model_args":{
        "architecture": "AutoModel",
        "num_labels": 1
    },
    "batch_size": 32,
    "criterion": "mse_loss",
    "optimizer": "AdamW",
    "lr": 1e-5,
    "lr_scheduler": "StepLR",
    "lr_scheduler_args": {
	    "step_size": 100
    },
    "max_epochs": 15,
    "max_length": 128,
    "log_every_n_steps": 1,
    "metric": "pearson",
    "data_loader": "SentTransformerDataLoader",
    "data_loader_args": {
        "data_dir": "data/",
        "shuffle": true,
        "num_workers": 8,
        "validation_split": 0.1,
        "collate_fn": "default_collate",
        "train_path": "data/train.csv",
        "val_path": "data/dev.csv",
        "test_path": "data/dev.csv",
        "predict_path": "data/test.csv"
    },
    "callback_monitor":"val_pearson",
    "wandb": {
        "owner": "wjl",
        "project": "nlp12/sts"
    }
}
