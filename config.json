{
    "name": "RoBERTa_baseline",
    "n_gpu": 1,
    "model": {
        "type": "Roberta",
        "args": {
            "checkpoint": "klue/roberta-small"
        }
    },
    "data_loader": {
        "type": "Dataloader",
        "args":{
            "train_path": "data/train.csv",
            "dev_path": "data/dev.csv",
            "test_path": "data/dev.csv",
            "predict_path": "data/test.csv",
            "batch_size": 16,
            "num_workers":8,
            "shuffle": true
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.03,
            "weight_decay": 0.01,
            "amsgrad": false
        }
    },
    "loss": "l1_loss",
    "metric":  "pearson_corrcoef",
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "gpus":1,
        "max_epochs":1,
        "log_every_n_steps":10,
        "enable_checkpointing":true,
        "default_root_dir": "saved/",
        "weights_save_path": "saved/"
    }
}
